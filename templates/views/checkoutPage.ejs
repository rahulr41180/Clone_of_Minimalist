
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="shortcut icon" href="//cdn.shopify.com/s/files/1/0410/9608/5665/files/Minimalist_Favicon-min_32x32.png?v=1646335623" type="image/png">
    <link rel="stylesheet" href="css/checkoutpage.css">
</head>
<body>
    <div id = "ProfileDetails">
        <div onclick="GoToHomePage()" id = "ProfileLeftBox" style="cursor: pointer;">
            <img id = "ProfileImage" src="https://thumbs.dreamstime.com/b/default-avatar-profile-icon-vector-default-avatar-profile-icon-vector-social-media-user-image-vector-illustration-227787227.jpg" alt="">
        </div>
        <div id = "ProfileRightBox">
            <div onclick= "GoToHomePage()" id = "MinimalistLogo" style="font-size: 1.4vw; cursor : pointer;"><b>minimalist_</b></div>
            <div id = "ContactInformation" style= "font-size: 1.2;"><b>Contact Information</b></div>
            <div id = "ProfileName">Name : <%= User.name %></div>
            <div id = "ProfileName">Email : <%= User.email %></div>
            <div onclick="logout()" id = "LogOut" style="cursor: pointer;"><u>LogOut</u></div>
        </div>
    </div>
    <div id = "container">
        <!--information box start-->
        <div id = "infobox">
            <div id = "locationtagbox">
                <img id = "locationtag" src="https://cdn4.iconfinder.com/data/icons/multimedia-75/512/multimedia-09-512.png" alt="">
                <p id = "DeliveryAddress">Shipping address</p>
                <p onclick="GoToHomePage()" style="cursor: pointer;" id = "MinimalistHome"><b>minimalist_</b></p>
            </div>
            <div id = "PersonalAddressBox">
                
                <form id = "infoform" action="/checkoutpage" method="POST">
                    <div id = "PersonalDetails">Personal Details</div>
                    <div id = "PersonalDetailsBox">
                        <div id = "firstname1">
                            <div id = "first">* Enter Full Name</div>
                            <div id = "fname">
                               <input id = "fname1" type="text" required name = "fullName">
                            </div>
                        </div>
                        <div id = "lastname1">
                            <div id = "last">* Enter Email</div>
                            <div id = "lname">
                                <input id = "lname1" type="email" required name = "email">
                            </div>
                        </div>
                        <div id = "contact1">
                            <div id = "number">* Enter Contact Number</div>
                            <div id = "number1">
                                <input id = "number2" type="number" required name = "MobileNumber">
                            </div>
                        </div>
                    </div>
                    <div id = "AddressDetails">Address Details</div>
                    <div id = "AddressDetailsBox">
                        <div id = "HouseBox">
                            <div id = "House">* House No</div>
                            <div id = "House1">
                               <input id = "House2" type="text" required name = "HouseNo">
                            </div>
                        </div>
                        <div id = "ApartmentBox">
                            <div id = "Apart">Enter Apartment Name</div>
                            <div id = "Apart1">
                                <input id = "Apart2" type="text" required name="ApartName">
                            </div>
                        </div>
                    </div>
                    <div id = "AddressDetailsBox">
                        <div id = "StreetBox">
                            <div id = "Street">Enter Street Details</div>
                            <div id = "Street1">
                               <input id = "Street2" type="text" required name="Street">
                            </div>
                        </div>
                        <div id = "LandMarkBox">
                            <div id = "LandMark">Enter Landmark For Easy Reach Out</div>
                            <div id = "LandMark1">
                                <input id = "LandMark2" type="text" required name="LandMark">
                            </div>
                        </div>
                    </div>
                    <div id = "PersonalDetailsBox">
                        <div id = "CityBox">
                            <div id = "City">Enter City Name</div>
                            <div id = "City1">
                               <input id = "City2" type="text" required name="CityName">
                            </div>
                        </div>
                        <div id = "AreaBox">
                            <div id = "Area">* Area Details</div>
                            <div id = "Area1">
                                <input id = "Area2" type="text" required name="Area">
                            </div>
                        </div>
                        <div id = "PincodeBox">
                            <div id = "Pincode">* Enter Pincode</div>
                            <div id = "Pincode1">
                                <input id = "Pincode2" type="number" required name="PinCode">
                            </div>
                        </div>
                    </div>
                    <input type="submit" id = "submit" value="Submit">
                    <!-- <button id = "submit" type = "submit">Submit</button> -->
                </form>
            </div>
        </div>


        <div id = "voucherbox">
            <div id = "totalpriceBox">
                <div id = "totalprice">Total Price</div>
                <div id = "totalAmount"><%= Total %></div>
            </div>
            <div id = "applymasai30">Apply masai30 and get 30% disscount</div>
            <div id = "couponbox">
                <div id = "promobtn">
                    <button onclick="ApplyPromoCode(`<%= sum %>`)" id = "applycode" >Apply PromoCode</button>
                </div>
                <div id = "inputpromo">
                    <input type="text" id = "input" placeholder="Enter Promo Code.....">
                </div>
            </div>
            <!-- <div id = "totalpriceBox">
                <div id = "totalprice">Total Price</div>
                <div id = "totalAmount"></div>
            </div> -->
            <div id = "GoToPayment">
                <button onclick="GoToPaymentPage(`<%= JSON.stringify(ProfileDetails) %>`, `<%= Carts %>`, `<%= sum %>`,`<%= Total %>`,`<%= User %>`)" id = "GoToPayment1">Go To Payment</button>
            </div>

            <div id = "totalItemBox">
                <div id = "totalItem">Total Item</div>
                <div id = "totalItemShow"><%= Carts.length %></div>
            </div>
            <div id = "ProductShowBox">
                <% Carts.map(function(element,index) { %>
                    <p class = "totalitems"><b><%= index + 1 %></b> : <%= element.productId.Title %></p>
                    <p class = "totalprc"><b>Price : </b>Rs. <%= element.productId.Price * element.quantity %></p>
                    <p class = "totalprc"><b>Quantity : </b> <%= element.quantity %></p>
                    <!-- <div id = "ProductImage">
                        <img id = "ProductImage1">
                    </div>
                    <div id = "ProductDetails">
                        <div class = "BrandName"></div>
                        <div class = "ProductName" id = "ProductName1">B</div>
                        <div class = "ProductName" id = "ProductMrpPrice">C</div>
                        <div class = "ProductName">D</div>
                    </div> -->
                <% }); %>
            </div>
        </div>
    </div>
</body>
</html>

<script src="scripts/checkoutpage.js"></script>